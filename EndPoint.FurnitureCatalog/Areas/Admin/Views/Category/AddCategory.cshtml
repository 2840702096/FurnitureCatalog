@using FurnitureCatalog.Application.Services.Categories.Command.AddCategory;
@model AddCategoryServiceInputDto

<form asp-controller="Category" asp-action="AddCategory" data-ajax="true" data-ajax-method="post" data-ajax-success="ExecuteAddCategory" style="text-align:right" id="AddCategoryForm" enctype="application/x-www-form-urlencoded" method="post">
    <input asp-for="ParentId" type="hidden" value="@ViewBag.Id" />
    <input asp-for="CategoryIdForEdit" type="hidden" value="@ViewBag.EditId" />
    <div class="form-group">
        <label class="col-form-label pt-0">نام</label>
        <input asp-for="Name" class="form-control" type="text">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group mb-0">
        <div class="product-buttons text-center">
            <button type="submit" class="btn btn-info">ذخیره</button>
        </div>
    </div>
</form>